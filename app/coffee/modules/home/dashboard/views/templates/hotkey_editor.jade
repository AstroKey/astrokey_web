mixin keyboardKey(opts)
  button.btn.btn-outline-primary.hotkey--child(data-click='key' data-key=opts.key class=opts.css)= opts.key

//- // // // // //

.d-flex.flex-column
  .row.my-1
    .col-lg-12
      +keyboardKey({ key: 'TAB', css: 'x2' })
      +keyboardKey({ key: 'Q' })
      +keyboardKey({ key: 'W' })
      +keyboardKey({ key: 'E' })
      +keyboardKey({ key: 'R' })
      +keyboardKey({ key: 'T' })
      +keyboardKey({ key: 'Y' })
