mixin positionSelect(opts)
  i.fa.fa-lg.fa-fw.position--select( class=opts.css, data-position=opts.position )

//- // // //

//- i.fa.fa-fw.fa-bars.handle.p-2

.key.justify-content-center.align-items-center.mb-2
  .content= key
  .hover
    i.fa.fa-fw.fa-lg.fa-times

.position
  each pos in positions
    +positionSelect(pos)

