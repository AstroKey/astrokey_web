mixin positionSelect(opts)
  i.fa.fa-lg.mx-1.position--select( class=opts.css, data-position=opts.position )

//- // // //

.key.d-flex.mb-2
  .inner.content
    if key && shift
      .shift= shift
      = key

    else
      .plain= key

  .inner.hover
    i.fa.fa-fw.fa-lg.fa-times

.position
  each pos in positions
    +positionSelect(pos)

